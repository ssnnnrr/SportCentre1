<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:data="clr-namespace:SportCentre1.Data"
        x:Class="SportCentre1.Windows.PaymentEditWindow"
        Title="Финансовая операция"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Border Classes="card" Margin="20">
        <StackPanel Spacing="10">
            <TextBlock Classes="h2">Данные платежа</TextBlock>
            <TextBlock>Клиент:</TextBlock>
            <ComboBox Name="ClientComboBox" x:DataType="data:Client">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0} {1}">
                                    <Binding Path="Firstname"/>
                                    <Binding Path="Lastname"/>
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Margin="0,10,0,0">Сумма:</TextBlock>
            <NumericUpDown Name="AmountUpDown" Minimum="0" Increment="100"/>
            <TextBlock Margin="0,10,0,0">Дата платежа:</TextBlock>
            <DatePicker Name="PaymentDatePicker"/>
            <TextBlock Margin="0,10,0,0">Описание:</TextBlock>
            <TextBox Name="DescriptionTextBox"/>
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Отмена" Classes="secondary" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>