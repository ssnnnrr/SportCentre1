<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:data="clr-namespace:SportCentre1.Data"
        x:Class="SportCentre1.Windows.ScheduleEditWindow"
        Title="Запись в расписании" Width="700" Height="520"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <StackPanel Margin="20" Spacing="10">
        <TextBlock>Тип тренировки:</TextBlock>
        <ComboBox Name="WorkoutTypeComboBox" x:DataType="data:Workouttype">
            <ComboBox.ItemTemplate><DataTemplate><TextBlock Text="{Binding Typename}"/></DataTemplate></ComboBox.ItemTemplate>
        </ComboBox>
        
        <TextBlock Margin="0,10,0,0">Тренер:</TextBlock>
        <ComboBox Name="TrainerComboBox" x:DataType="data:Trainer">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock>
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0} {1}">
                                <Binding Path="Firstname"/>
                                <Binding Path="Lastname"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        
        <TextBlock Margin="0,10,0,0">Дата и время начала:</TextBlock>
        <Grid ColumnDefinitions="*,Auto,*">
            <!-- ИСПРАВЛЕНИЕ: Добавлены имена -->
            <DatePicker Grid.Column="0" Name="StartDatePicker"/>
            <TimePicker Grid.Column="2" Name="StartTimePicker" ClockIdentifier="24HourClock"/>
        </Grid>
        
        <TextBlock Margin="0,10,0,0">Дата и время окончания:</TextBlock>
        <Grid ColumnDefinitions="*,Auto,*">
            <!-- ИСПРАВЛЕНИЕ: Добавлены имена -->
            <DatePicker Grid.Column="0" Name="EndDatePicker"/>
            <TimePicker Grid.Column="2" Name="EndTimePicker" ClockIdentifier="24HourClock"/>
        </Grid>
        
        <TextBlock Margin="0,10,0,0">Макс. количество участников:</TextBlock>
        <!-- ИСПРАВЛЕНИЕ: Добавлено имя -->
        <NumericUpDown Name="MaxCapacityUpDown" Minimum="1" Value="10"/>
        
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Сохранить" Name="SaveButton" Click="SaveButton_Click"/>
            <Button Content="Отмена" Name="CancelButton" Classes="secondary" IsCancel="True"/>
        </StackPanel>
    </StackPanel>
</Window>