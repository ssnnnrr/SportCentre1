<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SportCentre1.Windows.ClientEditWindow"
        Title="Карточка клиента"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Border Classes="card" Margin="20">
        <StackPanel Spacing="10">
            <TextBlock Classes="h2">Данные клиента</TextBlock>
            <TextBlock>Имя:</TextBlock>
            <TextBox Name="FirstNameTextBox"/>
            <TextBlock Margin="0,10,0,0">Фамилия:</TextBlock>
            <TextBox Name="LastNameTextBox"/>
            <TextBlock Margin="0,10,0,0">Email:</TextBlock>
            <TextBox Name="EmailTextBox"/>
            <TextBlock Margin="0,10,0,0">Телефон:</TextBlock>
            <TextBox Name="PhoneTextBox"/>
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Отмена" Classes="secondary" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>