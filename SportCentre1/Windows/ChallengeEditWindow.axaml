<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SportCentre1.Windows.ChallengeEditWindow"
        Title="Карточка челленджа"
        Width="450" Height="700"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Border Classes="card" Margin="20">
        <StackPanel Spacing="10">
            <TextBlock Classes="h2">Данные челленджа</TextBlock>
            
            <TextBlock>Название:</TextBlock>
            <TextBox Name="TitleTextBox"/>

            <TextBlock Margin="0,10,0,0">Описание:</TextBlock>
            <TextBox Name="DescriptionTextBox" Height="100" TextWrapping="Wrap" AcceptsReturn="True"/>

            <TextBlock Margin="0,10,0,0">Дата начала:</TextBlock>
            <DatePicker Name="StartDatePicker"/>

            <TextBlock Margin="0,10,0,0">Дата окончания:</TextBlock>
            <DatePicker Name="EndDatePicker"/>
            
            <TextBlock Margin="0,10,0,0">Награда:</TextBlock>
            <TextBox Name="RewardTextBox"/>
            
            <TextBlock Margin="0,10,0,0">Тип (логика отслеживания):</TextBlock>
            <ComboBox Name="TypeComboBox"/>

            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Отмена" Classes="secondary" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>