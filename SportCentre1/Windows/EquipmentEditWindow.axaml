<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SportCentre1.Windows.EquipmentEditWindow"
        Title="Карточка оборудования"
        Width="400" Height="500"
        WindowStartupLocation="CenterOwner" CanResize="False">
    <Border Classes="card" Margin="20">
        <StackPanel Spacing="10">
            <TextBlock Classes="h2">Данные оборудования</TextBlock>
            <TextBlock>Название:</TextBlock>
            <TextBox Name="NameTextBox"/>
            <TextBlock Margin="0,10,0,0">Статус:</TextBlock>
            <ComboBox Name="StatusComboBox"/>
            <TextBlock Margin="0,10,0,0">Количество:</TextBlock>
            <NumericUpDown Name="QuantityUpDown" Minimum="0" Value="1"/>
            <TextBlock Margin="0,10,0,0">Дата последнего обслуживания:</TextBlock>
            <DatePicker Name="MaintenanceDatePicker"/>
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Name="SaveButton" Content="Сохранить" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Отмена" Classes="secondary" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>