<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="SportCentre1.Windows.LoginWindow"
        Title="Вход в систему"
        Width="400" Height="420"
        WindowStartupLocation="CenterScreen" CanResize="False">
    <Border Classes="card" Margin="20">
        <StackPanel Spacing="10" VerticalAlignment="Center">
            <TextBlock Classes="h1" HorizontalAlignment="Center">Вход 🔑</TextBlock>
            <TextBlock>Email:</TextBlock>
            <TextBox Name="LoginTextBox"/>
            <TextBlock Margin="0,5,0,0">Пароль:</TextBlock>
            <TextBox Name="PasswordTextBox" PasswordChar="*"/>
            <TextBlock Name="ErrorTextBlock" Foreground="{StaticResource ErrorRed}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Name="LoginButton" Content="Войти" Click="LoginButton_Click" IsDefault="True"/>
                <Button Name="CancelButton" Content="Отмена" Classes="secondary" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>