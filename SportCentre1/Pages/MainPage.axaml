<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SportCentre1.Pages.MainPage">
    <Grid ColumnDefinitions="240,*">
        <Border Grid.Column="0" Background="White" BorderBrush="{StaticResource Border}" BorderThickness="0,0,1,0" Padding="10">
            <DockPanel>
                <Button Name="LogoutButton" Content="Выйти" DockPanel.Dock="Bottom" Margin="10" Click="LogoutButton_Click"/>
                
                <StackPanel Margin="5" Spacing="8">
                    <TextBlock FontSize="20" FontWeight="Bold" Margin="10">Навигация 🧭</TextBlock>
                    <Button Name="ProfileButton" Classes="NavButton" Content="Профиль 👤" Click="ProfileButton_Click"/>
                    <Button Name="MyBookingsButton" Classes="NavButton" Content="Мои записи 📅" Click="MyBookingsButton_Click"/>
                    <Button Name="ClientsButton" Classes="NavButton" Content="Клиенты 👥" Click="ClientsButton_Click"/>
                    <Button Name="ScheduleButton" Classes="NavButton" Content="Расписание 🏋️‍♀️" Click="ScheduleButton_Click"/>
                    <Button Name="EquipmentButton" Classes="NavButton" Content="Оборудование ⚙️" Click="EquipmentButton_Click"/>
                    <Button Name="PaymentsButton" Classes="NavButton" Content="Финансы 💰" Click="PaymentsButton_Click"/>
                    <Button Name="ReviewsButton" Classes="NavButton" Content="Отзывы ⭐" Click="ReviewsButton_Click"/>
                    <Button Name="RequestsButton" Classes="NavButton" Content="Запросы 📬" Click="RequestsButton_Click"/>
                    <Button Name="AnalyticsButton" Classes="NavButton" Content="Аналитика 📊" Click="AnalyticsButton_Click"/>
                </StackPanel>
            </DockPanel>
        </Border>
        
        <ContentControl Grid.Column="1" Name="MainContentControl" Margin="10"/>
    </Grid>
</UserControl>