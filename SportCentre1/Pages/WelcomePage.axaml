<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="SportCentre1.Pages.WelcomePage">
    <Grid>
        <Image Source="/Assets/sport.jpg" Stretch="UniformToFill"/>
        <Border Background="#80000000"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Добро пожаловать!" Foreground="White" FontSize="36" FontWeight="Bold"/>
            <TextBlock Text="Ваш путь к здоровью и силе начинается здесь!" Foreground="LightGray" FontSize="18" HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20">
            <Button Name="LoginButton" Content="Войти" Click="LoginButton_Click"/>
            <Button Name="RegisterButton" Content="Регистрация" Click="RegisterButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl>